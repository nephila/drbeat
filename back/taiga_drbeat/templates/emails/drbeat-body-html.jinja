<div>
{% for group in issues|groupby('status.name') %}
    </br>
    <div><b>{{ group.grouper }}</b></div>
    </br>
    <ul>
    {% for issue in group.list %}
    {% set final_url = resolve_front_url("issue", issue.project.slug, issue.ref) %}
    <li><a href="{{final_url}}">{{issue.subject}}</a></li>
    {% endfor %}
    </ul>
{% endfor %}
</div>
